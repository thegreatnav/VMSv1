<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/resetPassword"
    tools:context=".ui.ResetPassword">

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="330dp"
        android:layout_height="63dp"
        android:layout_above="@id/un"
        android:layout_marginStart="35dp"
        android:layout_marginTop="30dp"
        android:text="Reset Password"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/old_ps"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_above="@id/new_ps"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/acme"
        android:hint="Old Password"
        android:inputType="textEmailAddress"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_subtitle" />

    <EditText
        android:id="@+id/new_ps"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/acme"
        android:hint="New Password"
        android:inputType="textPassword"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/old_ps" />

    <EditText
        android:id="@+id/confirm_ps"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/acme"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_ps" />

    <Button
        android:id="@+id/save_new_password"
        android:layout_width="217dp"
        android:layout_height="64dp"
        android:layout_below="@id/confirm_ps"
        android:layout_marginStart="72dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#040C43"
        android:fontFamily="@font/acme"
        android:text="Save"
        android:textColor="@android:color/white"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_ps" />

    <Button
        android:id="@+id/verify_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:text="Verify"
        app:layout_constraintStart_toEndOf="@+id/old_ps"
        app:layout_constraintTop_toTopOf="@+id/old_ps" />

</androidx.constraintlayout.widget.ConstraintLayout>