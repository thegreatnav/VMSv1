<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/resetPassword"
    tools:context=".ui.ResetPassword">

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="330dp"
        android:layout_height="63dp"
        android:layout_above="@id/un"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="44dp"
        android:text="Reset Password"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.143" />

    <EditText
        android:id="@+id/old_ps"
        android:layout_width="313dp"
        android:layout_height="61dp"
        android:layout_above="@id/new_ps"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="239dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="143dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/acme"
        android:hint="Old Password"
        android:inputType="textEmailAddress"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/confirm_ps"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.818" />

    <EditText
        android:id="@+id/new_ps"
        android:layout_width="318dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/acme"
        android:hint="New Password"
        android:inputType="textPassword"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_subtitle"
        app:layout_constraintVertical_bias="0.005" />

    <EditText
        android:id="@+id/confirm_ps"
        android:layout_width="330dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="67dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="66dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/acme"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.346"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_subtitle"
        app:layout_constraintVertical_bias="0.054" />

    <Button
        android:id="@+id/save_new_password"
        android:layout_width="217dp"
        android:layout_height="64dp"
        android:layout_below="@id/confirm_ps"
        android:layout_marginStart="182dp"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="205dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#040C43"
        android:fontFamily="@font/acme"
        android:text="Save"
        android:textColor="@android:color/white"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_subtitle"
        app:layout_constraintVertical_bias="0.017" />

</androidx.constraintlayout.widget.ConstraintLayout>